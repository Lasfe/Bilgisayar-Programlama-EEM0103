//ax+b=0 denkleminin çözümü 
#include <iostream>  
using namespace std; 
int main ()
{ 
  setlocale(LC_ALL,"Turkish"); 
  double x,a,b; 
  
  cout<<"ax+b denklemini çözelim"; 
  
  cout<<"\na değerini gir : "; 
  cin>>a; 

while(a==0)
{
	cout<<"\na 0 olursa x\'i bulamayız lütfen a değerini sıfırdan farklı olarak tekrar giriniz."; 
	cin>>a;
}
  cout<<"b değerini gir : "; 
  cin>>b; 

  x = -b/a; 

  cout<<"x\'in değeri : "<<x;  

return 0; 
}
